---
import DarkModeIcon from "../assets/icons/DarkModeIcon.astro";
import LightModeIcon from "../assets/icons/LightModeIcon.astro";
import MenuIcon from "../assets/icons/MenuIcon.astro";
---

<header class="navbar">
  <h2><a href="/">JwC</a></h2>

  <div style="display: flex; align-items: center; gap: 0.5ch">
    <button class="theme-toggle" onclick="document.body.classList.toggle('dark')">
      <DarkModeIcon />
      <LightModeIcon />
    </button>
    <button>
      <MenuIcon />
    </button>
  </div>
</header>